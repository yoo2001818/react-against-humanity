{
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-underscore-dangle": 0,
    "max-len": [
      1,
      80,
      2
    ],
    "space-after-keywords": [
      2,
      "always"
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2
      }
    ],
    "strict": [
      2,
      "never"
    ],
    "no-console": 2,
    "curly": [
      2,
      "multi-line"
    ],
    "react/prop-types": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "__SERVER__": true,
    "__CLIENT__": true,
    "__DEVELOPMENT__": true,
    "__DEVTOOLS__": true,
    "__WEBPACK_ISOMORPHIC_TOOLS__": true
  }
}
